						</div>

					</td>


					{%endfor%}</tr>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_activitytype_index') }}">back to list</a>

	<a href="{{ path('app_activitytype_edit', {'id': activitytype.id}) }}">edit</a>

	{{ include('activitytype/_delete_form.html.twig') }}
