{% extends 'base.html.twig' %}

{% block title %}Activitytype
{% endblock %}

{% block body %}
	<h1>Activitytype</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ activitytype.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ activitytype.title }}</td>
			</tr>


			<tr>
				<th>Image</th>
				{%for img in activitytype.imgactivity%}
